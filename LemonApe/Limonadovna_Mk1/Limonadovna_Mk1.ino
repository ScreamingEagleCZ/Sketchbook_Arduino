/*Mk1 - Flowmeter + solenoid*///Libraries----------------------#include <Keypad.h>//Define Pins--------------------#define FlowPin 2#define InterruptPin 0 // digital pin 2 = interrupt pin 0#define RelayPin 12//Variables----------------------//Flowmeterconst float CalibValue = 4.5; // 4.5 pulses/s = 1l/s for FlowMetervolatile byte PulsesCount = 0;float flow = 0.0;unsigned int flowML = 0;unsigned long soucetML = 0;unsigned long oldTime = 0;//Keyboardconst byte rows = 4;const byte columns = 4;//fieldchar keys[rows][columns] = {  {'1','2','3','A'},  {'4','5','6','B'},  {'7','8','9','C'},  {'*','0','#','D'}};//set of pin numbers for connection with keyboardbyte RowPin[rows] = {4,5,6,7};byte ColumnPin[columns] = {8,9,10,11};//keyboard instance from keypad libraryKeypad keyboard = Keypad( makeKeymap(keys), RowPin, ColumnPin, rows, columns);void setup() {  //Comunication over serial 9600 baud  Serial.begin(9600);  //setup of pins  pinMode(FlowPin,INPUT);  pinMode(RelayPin, OUTPUT);  //input pin for interrupt, calling subFunction addPulse upon FALLING edge  attachInterrupt(InterruptPin, addPulse, FALLING);  }void loop() {  //load pressed key to variable  char key = keyboard.getKey();  if (key = 'A'){    Serial.print("Stisknuta spravna klavesa");    digitalWrite(RelayPin, HIGH);  }  if (key = 'B'){    Serial.print("Stisknuta spravna klavesa");    digitalWrite(RelayPin, LOW);  }        }//subFunctionvoid addPulse() {  PulsesCount++;}